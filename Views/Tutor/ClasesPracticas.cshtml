@{
    Layout = "_LayoutTutor";
}
<head>
</head>
<body>
    <div class="container">
        <div class="card mt-4">
            <div class="card-header">
                <h5>Lista de estudiantes para Clases Practicas, Evaluación Causalidad y Consecuencias</h5>
            </div>
            <div class="card-body">
                <table class="table table-bordered" id="tablaClasePractica">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Email Usuario</th>
                            <th>Categoria Licencia</th>
                            <th>Fecha Solicitud</th>
                            <th>Estado Clase Practica</th>
                            <th>Vehiculo</th>
                            <th>Realizar Prueba</th>
                            <th>Gestiom</th>
                        </tr>
                    </thead>
                    <tbody id="TablaClases"></tbody>
                </table>
            </div>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="gestionClase" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
            <div class="modal-dialog modal-xl">
                <div class="modal-content">
                    <form id="editarClase">
                        <div class="modal-header">
                            <h5 class="modal-title" id="staticBackdropLabel">Detalles Clase Practica</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <div class="card">
                                <div class="card-body">
                                    <div class="row">
                                        <input type="hidden" id="idClase" name="idClase" />
                                        <h5>Perfil Usuario</h5>
                                        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4 mb-2">
                                            <label class="form-label">Primer y Segundo Nombre</label>
                                            <input class="form-control" type="text" readonly id="nombreUsuario" />
                                        </div>
                                        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4 mb-2">
                                            <label class="form-label">Primer y Segundo Apellido</label>
                                            <input class="form-control" type="text" readonly id="apellidoUsuario" />
                                        </div>
                                        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4 mb-2">
                                            <label class="form-label">Edad</label>
                                            <input class="form-control" type="text" readonly id="edadUsuario" />
                                        </div>
                                        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4 mb-2">
                                            <label class="form-label">Documento</label>
                                            <input class="form-control" type="text" readonly id="documentoUsuario" />
                                        </div>
                                        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4 mb-2">
                                            <label class="form-label">Telefono</label>
                                            <input class="form-control" type="text" readonly id="telefonoUsuario" />
                                        </div>
                                        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4 mb-2">
                                            <label class="form-label">Direccion</label>
                                            <input class="form-control" type="text" readonly id="direccionUsuario" />
                                        </div>
                                        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4 mb-2">
                                            <label class="form-label">Email</label>
                                            <input class="form-control" type="text" readonly id="emailUsuario" />
                                        </div>
                                        <hr />
                                        <h5>Detalles de la Clase</h5>
                                        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4 mb-2">
                                            <label class="form-label">Categoria Licencia</label>
                                            <input class="form-control" type="text" readonly id="categoriaLicencia" />
                                        </div>
                                        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4 mb-2">
                                            <label class="form-label">Fecha Solicitud</label>
                                            <input class="form-control" type="text" readonly id="fechaSolicitud" />
                                        </div>
                                        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4 mb-2">
                                            <label class="form-label">Fecha Finalizacion</label>
                                            <input class="form-control" type="text" readonly id="fechaFinalizacion" />
                                        </div>
                                        <hr />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">CERRAR</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="cuestionario" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
            <div class="modal-dialog modal-xl">
                <div class="modal-content">
                    <form id="enviarcuestionario">
                        <div class="modal-header">
                            <h5 class="modal-title" id="staticBackdropLabel">Cuestionario causas y consecuencias</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <div class="card">
                                <div class="card-body bg-Light">
                                    <div class="row">
                                        <div class="col-12 mb-2">
                                            <label class="form-label"><strong>1.¿Qué Debo hacer cuando incrementa la distancia entre mi vehículo y el vehículo de delante?</strong></label>
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="pregunta1" value="2">
                                                <label class="form-check-label">Bajar la velocidad del vehículo.</label>
                                            </div>
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="pregunta1" value="3">
                                                <label class="form-check-label">Bajar la velocidad del vehículo y dejar que se adelante un poco.</label>
                                            </div>
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="pregunta1" value="1">
                                                <label class="form-check-label">Frenar en seco y dejar que siga el otro Vehículo.</label>
                                            </div>
                                        </div>
                                        <div class="col-12 mb-2">
                                            <label class="form-label"><strong>2.¿Cuándo maneje en niebla y/o luvia como debo conducir?</strong></label>
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="pregunta2" value="3">
                                                <label class="form-check-label">Conducir con baja velocidad con precaución y con las luces bajas.</label>
                                            </div>
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="pregunta2" value="2">
                                                <label class="form-check-label">Conducir con precaución y con luces bajas.</label>
                                            </div>
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="pregunta2" value="1">
                                                <label class="form-check-label">Conducir con luces baja.</label>
                                            </div>
                                        </div>
                                         <div class="col-12 mb-2">
                                            <label class="form-label"><strong>3.Si observo un peligro en la vía (una persona o un animal se me atraviesa), ¿cuáles la mejor manera de reaccionar al respecto?</strong></label>
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="pregunta3" value="2">
                                                <label class="form-check-label">Esquivar y observar quienes vienen a mi alrededor y seguir mi camino.</label>
                                            </div>
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="pregunta3" value="1">
                                                <label class="form-check-label">Bajar la velocidad.</label>
                                            </div>
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="pregunta3" value="3">
                                                <label class="form-check-label">Bajar la velocidad y esquivarme. </label>
                                            </div>
                                        </div>
                                        <div class="col-12 mb-2">
                                            <label class="form-label"><strong>4.¿Cómo debo actuar cuando se requiere una frenada emergencia?</strong></label>
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="pregunta4" value="1">
                                                <label class="form-check-label">Con frenadas fuertes y a fondo, pero sin bloquear las ruedas.</label>
                                            </div>
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="pregunta4" value="3">
                                                <label class="form-check-label">Con frenadas suaves y progresivas.</label>
                                            </div>
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="pregunta4" value="2">
                                                <label class="form-check-label">Pisando el closth y el freno fuerte sin bloquear las ruedas. </label>
                                            </div>
                                        </div>
                                        <div class="col-12 mb-2">
                                            <label class="form-label"><strong>5.¿Cuál o cuáles son las características que distinguen al conductor seguro?</strong></label>
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="pregunta5" value="3">
                                                <label class="form-check-label">Es considerado amable y hace todo lo posible para evitar accidentes.</label>
                                            </div>
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="pregunta5" value="1">
                                                <label class="form-check-label">Es amable y no respeta las normas de tránsito.</label>
                                            </div>
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="pregunta5" value="2">
                                                <label class="form-check-label">Conduce con unas prudencias y es impulsivo. </label>
                                            </div>
                                        </div>
                                        <div class="col-12 mb-2">
                                            <label class="form-label"><strong>6.¿Qué podría hacerlo desviar de la calzada?</strong></label>
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="pregunta6" value="2">
                                                <label class="form-check-label">Conducir con una alta velocidad y el cansancio.</label>
                                            </div>
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="pregunta6" value="1">
                                                <label class="form-check-label">Conducir con un alta de velocidad.</label>
                                            </div>
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="pregunta6" value="3">
                                                <label class="form-check-label">Conducir con cansancio, con un alta de velocidad y distracción. </label>
                                            </div>
                                        </div>
                                        <div class="col-12 mb-2">
                                            <label class="form-label"><strong>7.¿Qué puede contribuir a que un conductor subestime peligrosamente su propia velocidad?</strong></label>
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="pregunta7" value="2">
                                                <label class="form-check-label">La conducción durante largo tiempo a alta velocidad y ebrio. </label>
                                            </div>
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="pregunta7" value="1">
                                                <label class="form-check-label">La conducción sobre calzadas anchas y en buen estado.</label>
                                            </div>
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="pregunta7" value="3">
                                                <label class="form-check-label">Conducir durante largo tiempo a alta velocidad ebrio y sobre calzadas anchas. </label>
                                            </div>
                                        </div>
                                        <div class="col-12 mb-2">
                                            <label class="form-label"><strong>8.¿Qué consejo daría usted a un conductor que ha ingerido bebidas alcohólicas?</strong></label>
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="pregunta8" value="3">
                                                <label class="form-check-label">Decirle que no debe conducir bajo estado de embriaguez. </label>
                                            </div>
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="pregunta8" value="2">
                                                <label class="form-check-label">Que tome una taza de café cargado y luego conduzca a casa.</label>
                                            </div>
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="pregunta8" value="1">
                                                <label class="form-check-label">Que se vuelva a casa conduciendo lenta y muy cuidadosamente. </label>
                                            </div>
                                        </div>
                                         <div class="col-12 mb-2">
                                            <label class="form-label"><strong>9.Usted comienza a sentir cansancio en un viaje. ¿Qué debería hacer?</strong> </label>
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="pregunta9" value="2">
                                                <label class="form-check-label">Detenerse y comer una gran comida. </label>
                                            </div>
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="pregunta9" value="1">
                                                <label class="form-check-label">Detenerse inmediatamente y respirar profundo.</label>
                                            </div>
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="pregunta9" value="3">
                                                <label class="form-check-label">Detenerse y dormir una pequeña siesta o detenerse y tomar un poco de café. </label>
                                            </div>
                                        </div>
                                        <div class="col-12 mb-2">
                                            <label class="form-label"><strong>10.¿Qué debería hacer Ud. si el auto queda sin frenos? </strong></label>
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="pregunta10" value="2">
                                                <label class="form-check-label">Disminuir la velocidad y ubicarse en el carril de circulación lenta. </label>
                                            </div>
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="pregunta10" value="3">
                                                <label class="form-check-label">Disminuir la velocidad y desviarme donde no hay otro Vehículo.</label>
                                            </div>
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="pregunta10" value="3">
                                                <label class="form-check-label">Hace señales con las manos y girar a la derecha el auto y tratar de orillarlo. </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">CERRAR</button>
                             <button type="submit" class="btn btn-primary">ENVIAR</button>
                        </div>
                       
                    </form>
                </div>
            </div>
        </div>
    </div>
    @section Scripts{
    <script>
        $( document ).ready(function() {
            traerSolicitudClases();
            //traerEstadoClase();
        });

        function traerSolicitudClases(){
            var id = @User.Identity.Name;
            //var id=8;
            $.ajax({
                type: "GET",
                url: '@Url.Action("TraerSolicitudClasesPracticas","Tutor")',
                data: {id:id},
                success: function(respuesta){
                    var Clases= respuesta.clases;
                    console.log(Clases);
                    var plantilla ='';
                    var contador=1;
                    var color='';
                    Clases.forEach(Clase=>{
                        switch(Clase.idEstado){
                            case 1:
                                color = 'class="table-info"';
                                break;
                            case 2:
                                color = 'class="table-warning"';
                                break;
                            case 3:
                                color = 'class="table-success"';
                                break;
                            case 4:
                                color = 'class="table-danger"';
                                break;
                        }
                        plantilla+=`<tr id="${Clase.id}">
                            <td>${contador}</td>
                            <td>${Clase.emailUsuario}</td>
                            <td>${Clase.categoriaLicencia}</td>
                            <td>${Clase.fechaSolicitud}</td>
                            <td ${color}>${Clase.descripcionEstado}</td>
                            <td>${Clase.descripcionMarca} ${Clase.descripcionModelo}</td>`
                            if(Clase.idVehiculo != null){
                                plantilla+=`<td>
                                    <div class="btn-group">
                                        <a class="btn btn-success prueba" data-bs-toggle="modal" data-bs-target="#cuestionario">Prueba<a>
                                    </div>
                                </td>`
                            }else{
                                plantilla+=`<td class="table-danger">Esperando Asignacion de vehiculo</td>`
                            }
                            plantilla+=`<td>
                                <div class="btn-group">
                                    <a class="btn btn-primary editar" data-bs-toggle="modal" data-bs-target="#gestionClase">Gestionar<a>
                                </div>
                            </td>
                        </tr>`
                        contador+=1;
                    });
                    $('#TablaClases').html(plantilla);
                    dataTable();
                }
            });
        }

        function dataTable(){
            const datatablesSimple = document.getElementById('tablaClasePractica');
            if (datatablesSimple) {
                new simpleDatatables.DataTable(datatablesSimple);
            }
        }

        $(document).on('click','.editar', function(){
            var element=$(this)[0].parentElement.parentElement.parentElement;
            //console.log(element);
            var id=$(element).attr('id');
            $.ajax({
                type: "GET",
                url: '@Url.Action("TraerClaseU","Tutor")',
                data: {id:id},
                success: function(respuesta){
                    //console.log(respuesta);
                    var clase = respuesta.clase[0];
                    //console.log(clase);
                    var fechaFinalizacion = clase.fechaFinalizacion.split(' ');

                    $('#idClase').val(clase.id);
                    $('#nombreUsuario').val(clase.nombre1Usuario);
                    $('#apellidoUsuario').val(clase.apellido1Usuario);
                    $('#edadUsuario').val(clase.edadUsuario);
                    $('#documentoUsuario').val(clase.documentoUsuario);
                    $('#telefonoUsuario').val(clase.telefonoUsuario);
                    $('#direccionUsuario').val(clase.direccionUsuario);
                    $('#emailUsuario').val(clase.emailUsuario);

                    $('#categoriaLicencia').val(clase.categoriaLicencia);
                    $('#fechaSolicitud').val(clase.fechaSolicitud);
                    $('#fechaFinalizacion').val(fechaFinalizacion[0]);

                }
            });
        });

        $('#enviarcuestionario').submit(function(e){
            $.ajax({
                type: "POST",
                data: $('#enviarcuestionario').serialize(),
                 url:'@Url.Action("RegistrarCuestionario","Tutor")',
                 success: function(respuesta){
                     console.log(respuesta);
                 }
                 });
            e.preventDefault();
        });

    </script>
    }
</body>
