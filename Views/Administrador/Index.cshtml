@using Microsoft.AspNetCore.Identity
@{
    Layout = "_LayoutAdministrador";
}
<body>
    <a class="nav-link text-dark" asp-area="" asp-controller="IniciarSesion" asp-action="CerrarSesion">Cerrar Sesion</a>
    <div id="informacion"></div>
    @section Scripts{
    <script>
        $( document ).ready(function() {
            traerUsuario();
        });

        function traerUsuario(){
            var id = '@User.Identity.Name';
            $.ajax({
                type: "GET",
                data: {id: id},
                url: '@Url.Action("TraerUsuario","Administrador")',
                success: function(respuesta){
                    var usuario = respuesta.usuario;
                    //console.log(usuario);
                    var plantilla='Bienvenido '+usuario[0].email;
                    $('#informacion').html(plantilla);
                }
            });
        }
    </script>
    }
</body>
