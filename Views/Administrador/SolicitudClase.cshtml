@{
    Layout = "_LayoutAdministrador";
}
<head>
</head>
<body>
    <div class="container">
        <div class="card mt-4">
            <div class="card-header">
                <i class="fas fa-table me-1"></i>
                SOLICITUDES DE CLASES REORICAS

            </div>
            <div class="card-body">
                <table class="table table-bordered" id="tablaClaseTeorica">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>NombreUuario</th>
                            <th>NombreTutor</th>
                            <th>Categoria Licencia</th>
